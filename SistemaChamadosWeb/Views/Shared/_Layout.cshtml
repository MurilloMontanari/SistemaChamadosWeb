<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sistema Chamados</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Sistema Chamados</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetInt32("UsuarioId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Chamados" asp-action="Index">Chamados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Chamados" asp-action="MeusChamados">Meus Chamados</a>
                        </li>

                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Sair (@Context.Session.GetString("UsuarioNome"))</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Entrar</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Cadastrar</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        @RenderBody()
    </div>

    <footer class="text-center mt-5 mb-3 text-muted">
        &copy; @DateTime.Now.Year - Sistema de Chamados PIM
    </footer>
</body>
</html>
