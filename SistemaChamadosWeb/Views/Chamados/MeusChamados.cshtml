@model IEnumerable<SistemaChamadosWeb.Models.Chamado>

@{
    ViewData["Title"] = "Meus Chamados";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-primary d-flex align-items-center">
                    <i class="bi bi-clipboard-check me-2"></i> Meus Chamados
                </h3>
                <a asp-action="Create" class="btn btn-success px-4 shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Abrir Chamado
                </a>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center shadow-sm">
                    Você ainda não abriu nenhum chamado 😕
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm rounded-3">
                    <table class="table align-middle table-hover mb-0 text-center">
                        <thead class="table-primary">
                            <tr>
                                <th>ID</th>
                                <th>Título</th>
                                <th>Status</th>
                                <th>Prioridade</th>
                                <th>Data de Abertura</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var chamado in Model)
                            {
                                var statusClass = chamado.Status switch
                                {
                                    "Aberto" => "badge bg-success",
                                    "Em Andamento" => "badge bg-warning text-dark",
                                    "Fechado" => "badge bg-secondary",
                                    _ => "badge bg-light text-dark"
                                };

                                <tr>
                                    <td>@chamado.Id</td>
                                    <td class="text-start fw-semibold">@chamado.Titulo</td>
                                    <td><span class="@statusClass">@chamado.Status</span></td>
                                    <td>@chamado.Prioridade</td>
                                    <td>@chamado.DataAbertura.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> Detalhes
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
