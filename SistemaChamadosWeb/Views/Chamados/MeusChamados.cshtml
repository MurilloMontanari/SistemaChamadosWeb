@model IEnumerable<SistemaChamadosWeb.Models.Chamado>

@{
    ViewData["Title"] = "Meus Chamados";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold text-primary"><i class="bi bi-clipboard-check"></i> Meus Chamados</h3>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-circle"></i> Abrir Chamado
    </a>
</div>

<table class="table table-hover shadow-sm align-middle">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Status</th>
            <th>Prioridade</th>
            <th>Data de Abertura</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chamado in Model)
        {
            <tr>
                <td>@chamado.Id</td>
                <td>@chamado.Titulo</td>
                <td>
                    <span class="badge @(chamado.Status == "Fechado" ? "bg-secondary" : "bg-success")">
                        @chamado.Status
                    </span>
                </td>
                <td>@chamado.Prioridade</td>
                <td>@chamado.DataAbertura.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i> Detalhes
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
