@model IEnumerable<SistemaChamadosWeb.Models.Chamado>

@{
    ViewData["Title"] = "Chamados";
}

<div class="container mt-5 mb-4">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 text-center text-md-start">
                <h3 class="fw-bold text-primary mb-3 mb-md-0 d-flex align-items-center justify-content-center justify-content-md-start">
                    <i class="bi bi-list-task me-2"></i> Chamados
                </h3>
                <a asp-action="Create" class="btn btn-success px-4 shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Abrir Chamado
                </a>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center shadow-sm">
                    Nenhum chamado encontrado 😕
                </div>
            }
            else
            {
                <div class="table-responsive-sm table-responsive-md shadow-sm rounded-3">
                    <table class="table align-middle table-hover mb-0 text-center">
                        <thead class="table-primary">
                            <tr>
                                <th>ID</th>
                                <th>Título</th>
                                <th>Status</th>
                                <th>Prioridade</th>
                                <th>Data de Abertura</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var chamado in Model)
                            {
                                var statusClass = chamado.Status switch
                                {
                                    "Aberto" => "badge bg-success",
                                    "Em Andamento" => "badge bg-warning text-dark",
                                    "Fechado" => "badge bg-secondary",
                                    _ => "badge bg-light text-dark"
                                };

                                <tr>
                                    <td>@chamado.Id</td>
                                    <td class="text-start fw-semibold">@chamado.Titulo</td>
                                    <td><span class="@statusClass">@chamado.Status</span></td>
                                    <td>@chamado.Prioridade</td>
                                    <td>@chamado.DataAbertura.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-outline-primary btn-sm w-100 w-md-auto">
                                            <i class="bi bi-eye"></i> Detalhes
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
