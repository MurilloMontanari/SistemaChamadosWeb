@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 380px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-primary">
            <i class="bi bi-box-arrow-in-right"></i> Acesso ao Sistema
        </h3>

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Erro</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label fw-semibold">E-mail</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Digite seu e-mail" required />
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label fw-semibold">Senha</label>
                <input type="password" id="senha" name="senha" class="form-control" placeholder="Digite sua senha" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-2">
                <i class="bi bi-door-open"></i> Entrar
            </button>

            <div class="text-center mt-2">
                <a asp-action="Register" class="text-decoration-none text-secondary">
                    <i class="bi bi-person-plus"></i> Criar nova conta
                </a>
            </div>
        </form>
    </div>
</div>
