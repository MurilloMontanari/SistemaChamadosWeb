@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10 col-12">
            <div class="card shadow p-4 rounded-4">
                <h3 class="text-center mb-4 text-primary fw-bold">Acesso ao Sistema</h3>

                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Erro</div>
                }

                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">E-mail</label>
                        <input name="email" type="email" class="form-control form-control-lg" placeholder="Digite seu e-mail" required />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Senha</label>
                        <input name="senha" type="password" class="form-control form-control-lg" placeholder="Digite sua senha" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fs-5">Entrar</button>

                    <div class="text-center mt-3">
                        <a asp-controller="Account" asp-action="Register" class="text-decoration-none">
                            Criar nova conta
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
